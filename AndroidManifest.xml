<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.servidorphpuca"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />
  <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
     <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
     <uses-permission android:name="android.permission.CAMERA" />
     <uses-feature android:name="android.hardware.camera" android:required="true" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/iconoprincipal"
        android:label="@string/app_name"
        android:theme="@style/CustomActionBarTheme" >
        <activity
            android:configChanges="orientation"
            android:name="com.example.servidorphpuca.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"  >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.servidorphpuca.Primero"
            android:label="@string/title_activity_primero"
            android:parentActivityName="com.example.servidorphpuca.MainActivity"
            android:screenOrientation="portrait"
            android:clearTaskOnLaunch="true">
        </activity>
        <activity
            android:name="com.example.servidorphpuca.ImagenGaleria"
            android:label="@string/title_activity_imagengaleria"
            android:parentActivityName="com.example.servidorphpuca.MainActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:noHistory="true"
            android:name="com.example.servidorphpuca.TerceroGaleria"
            android:label="@string/title_activity_tercero" 
            android:parentActivityName="com.example.servidorphpuca.MainActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:windowSoftInputMode="adjustResize|stateHidden"
            android:noHistory="true"
            android:configChanges="orientation|screenSize"
            android:name="com.example.servidorphpuca.Cuarto"
            android:label="@string/title_activity_cuarto" >
        </activity>
        
        <activity
            android:noHistory="true"
            android:name="com.example.servidorphpuca.TerceroImageFullSize"
            android:label="@string/title_activity_terceroimagefullsize" 
            android:parentActivityName="com.example.servidorphpuca.MainActivity">
        </activity>
        
 
    </application>

</manifest>
