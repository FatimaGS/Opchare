<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_centerInParent="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondoapp"
    tools:context=".Cuarto" >
    
    <!-- 
    	<ImageView
			android:id="@+id/micro"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:onClick="speak"
			android:src="@android:drawable/ic_btn_speak_now"/>
	 -->
       	<EditText
	        android:id="@+id/viewText"
	        android:layout_width="fill_parent"
	        android:layout_height="300dp"
	        android:layout_above="@+id/botones"
	        android:layout_alignParentTop="true"  
		    android:paddingBottom="@dimen/activity_vertical_margin"
		    android:paddingLeft="@dimen/activity_horizontal_margin"
		    android:paddingRight="@dimen/activity_horizontal_margin"
		    android:paddingTop="@dimen/activity_vertical_margin"/>

       	<LinearLayout
		android:id="@+id/botones"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal" 
	    android:layout_alignParentBottom="true">

		<Button
		    android:id="@+id/btnvalorar"
		    android:layout_width="0dp"
		    android:layout_height="fill_parent"
		    android:layout_weight=".5"
		    android:text="@string/Valorar"
        	android:background="@drawable/pulsacionboton2"
        	android:onClick="btnRepetir"
        	android:textColor="#ffffff"
        	android:textSize="20sp"
        	android:drawableLeft="@drawable/estrellaapp"
        	android:padding="10dp"
      		android:drawablePadding="0dp"
      		android:gravity="center"/>

		<Button
		    android:id="@+id/btnpdf"
		    android:layout_width="0dp"
		    android:layout_height="fill_parent"
		    android:layout_weight=".5"
		    android:text="@string/pdf"
        	android:background="@drawable/pulsacionboton2"
        	android:textColor="#ffffff"
        	android:textSize="20sp"
        	android:drawableRight="@drawable/pdfapp"
        	android:padding="10dp"
      		android:paddingLeft="40dp"
      		android:gravity="center"/>
	    
    </LinearLayout>

</RelativeLayout>
